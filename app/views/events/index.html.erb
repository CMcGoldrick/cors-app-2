<h1>First Roanoke Events</h1>

<style type="text/css">
  td {  max-width: 400px;
        padding-right: 40px;
      }

</style>

<table>
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Date</th>
      <th>Description</th>

    </tr>
  </thead>
 
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event["EventName"] %></td>
        <td><%= event["EventDate"] %></td>
        <td><%= event["Description"] %></td>
        
        </tr>
        
    <% end %>
  </tbody>
</table>



